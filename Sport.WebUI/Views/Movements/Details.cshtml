@model Sport.Domain.Entities.Movement


@{
    ViewData["Title"] = "Detaylar";
}

<h3>Detaylar</h3>
<div>
    @*<h4>Movement</h4>*@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Hareket İsmi</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovementName)
        </dd>
        <dt class="col-sm-2">
            <label>Fotoğraf</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovementPhoto)
        </dd>
        <dt class="col-sm-2">
            <label>Açıklama</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovementDescription)
        </dd>
        <dt class="col-sm-2">
            <label>Etki Ettiği Bölge</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnumMovementType)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Güncelle</a>
    }
    <a asp-action="Index" class="btn btn-warning">Hareket Listesi</a>
</div>
