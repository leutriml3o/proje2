@model Sport.Domain.Entities.Food

@{
    ViewData["Title"] = "Detaylar";
}

<h3>Detaylar</h3>

<div>
    @*h4>Besin</h4>*@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Besin İsmi</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <label>Kalori Değeri</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaloriValue)
        </dd>
        <dt class="col-sm-2">
            <label>Protein Değeri</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProteinValue)
        </dd>
        <dt class="col-sm-2">
            <label>Karbonhidrat Değeri</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarbohydrateValue)
        </dd>
        <dt class="col-sm-2">
            <label>Yağ Değeri</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OilValue)
        </dd>
        <dt class="col-sm-2">
            <label>Lif Değeri</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FiberValue)
        </dd>
        <dt class="col-sm-2">
            <label>Fotoğraf</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodPhoto)
        </dd>
        <dt class="col-sm-2">
            <label>Besin Türü</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnumFoodType)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Güncelle</a>
    }
    <a asp-action="Index" class="btn btn-warning">Besin Listesi</a>
</div>
